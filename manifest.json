{
  "manifest_version": 3,
  "name": "Read Aloud",
  "version": "1.0",
  "description": "Listen to page content with synchronized highlighting",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost/*", "http://127.0.0.1/*"],
  "action": {
    "default_title": "Read Aloud"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
